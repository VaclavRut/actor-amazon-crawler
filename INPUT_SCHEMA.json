{
  "title": "Amazon crawler",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "country": {
      "title": "Amazon market",
      "type": "string",
      "description": "Select your Amazon domain",
      "editor": "select",
      "default": "US",
      "enum": [
        "US",
        "UK",
        "DE",
        "ES",
        "FR",
        "IT",
        "IN",
        "CA",
        "JP"
      ],
      "enumTitles": ["amazon.com",
        "amazon.co.uk",
        "amazon.de",
        "amazon.es",
        "amazon.fr",
        "amazon.it",
        "amazon.in",
        "amazon.ca",
        "amazon.co.jp"]
    },

    "keywords": {
      "title": "Keywords to search",
      "type": "string",
      "description": "Keywords you would like to extract from Amazon, comma separated",
      "prefill": "Iphone X,Samsung monitor 27 QHD",
      "editor": "textarea"
    },
    "asins": {
      "title": "ASINs to extract",
      "type": "array",
      "description": "Array of ASINs objects to extract, read description of the actor to understand this.",
      "prefill": [{
          "asin":"B07HBC3CNF",
          "countries":["de","it"]
      }],
      "editor": "json"
    },
      "directUrls": {
          "title": "Direct urls",
          "type": "array",
          "description": "Array of request objects, that you neeed to scrape. Fill as many attributes as possible. Available labels are seller",
          "prefill": [{
              "url": "https://www.amazon.de/gp/offer-listing/B07XRR7N5V/",
              "userData": {
                  "label": "seller",
                  "asin": "B07XRR7N5V",
                  "detailUrl": "https://www.amazon.de/dp/B07XRR7N5V/",
                  "sellerUrl": "https://www.amazon.de/gp/offer-listing/B07XRR7N5V/",
                  "country": "DE"
              }
          }],
          "editor": "json"
      },
    "maxResults": {
      "title": "Number of results",
      "type": "integer",
      "description": "Number of results you would like to save in total.",
      "default": 0,
      "editor": "number"
    },
    "proxy":{
        "title": "Proxy configuration",
        "type": "object",
        "description": "Select proxies to be used by your crawler.",
        "prefill": { "useApifyProxy": true },
        "editor": "proxy"
    }
  }
}
